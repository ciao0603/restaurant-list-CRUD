<div class="m-5">
  <form action="/restaurants"
    method="POST">
    <div class="form-group">
      <label for="name"
        class="col-form-label">
        餐廳名稱：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="name">
      </div>
    </div>
    <div class="form-group">
      <label for="category"
        class="col-form-label">
        類別：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="category">
      </div>
    </div>
    <div class="form-group">
      <label for="rating"
        class="col-form-label">
        評分：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="rating">
      </div>
    </div>
    <div class="form-group">
      <label for="location"
        class="col-form-label">
        地址：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="location">
      </div>
    </div>
    <div class="form-group">
      <label for="google_map"
        class="col-form-label">
        Google Map網址：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="google_map">
      </div>
    </div>
    <div class="form-group">
      <label for="phone"
        class="col-form-label">
        電話：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="phone">
      </div>
    </div>
    <div class="form-group">
      <label for="description"
        class="col-form-label">
        餐廳簡介：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="description">
      </div>
    </div>
    <div class="form-group">
      <label for="image"
        class="col-form-label">
        圖片網址：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="image">
      </div>
    </div>
    <button type="submit"
      class="btn btn-primary mt-3">Create</button>
    <a href="/"
      class="btn btn-secondary mt-3">Cancel</a>
  </form>
</div>
