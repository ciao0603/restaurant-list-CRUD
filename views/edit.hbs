<div class="m-5">
  <form action="/restaurants/{{data._id}}/edit"
    method="POST">
    <div class="form-group">
      <label for="name"
        class="col-form-label">
        餐廳名稱：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="name"
          value="{{data.name}}">
      </div>
    </div>
    <div class="form-group">
      <label for="category"
        class="col-form-label">
        類別：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="category"
          value="{{data.category}}">
      </div>
    </div>
    <div class="form-group">
      <label for="location"
        class="col-form-label">
        地址：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="location"
          value="{{data.location}}">
      </div>
    </div>
    <div class="form-group">
      <label for="google_map"
        class="col-form-label">
        Google Map網址：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="google_map"
          value="{{data.google_map}}">
      </div>
    </div>
    <div class="form-group">
      <label for="phone"
        class="col-form-label">
        電話：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="phone"
          value="{{data.phone}}">
      </div>
    </div>
    <div class="form-group">
      <label for="description"
        class="col-form-label">
        餐廳簡介：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="description"
          value="{{data.description}}">
      </div>
    </div>
    <div class="form-group">
      <label for="image"
        class="col-form-label">
        圖片網址：
      </label>
      <div>
        <input type="text"
          class="form-control"
          name="image"
          value="{{data.image}}">
      </div>
    </div>
    <button type="submit"
      class="btn btn-primary mt-3">Save</button>
    <a href="/"
      class="btn btn-secondary mt-3">Back</a>
  </form>
</div>